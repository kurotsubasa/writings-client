{{#unless writing}}
  {{#each writings as |writing|}}
    <section data-id="{{writing.id}}" class="col-md-5 shadow p-4 mb-4 bg-dark rounded mx-2 text-light">
      <h3>
        Title: {{writing.name}}
      </h3>
        <p>
          Genre: {{#if writing.genre}}
            {{writing.genre}}
          {{else}}
            No genre provided
          {{/if}}
        </p>
        <p>
          Author:
          {{#if writing.author}}
            {{writing.author}}
          {{else}}
            No author provided
          {{/if}}
        </p>
        <p>
          <p>
          {{#each ../readings as |reading|}}
            {{#ifeqs writing ../readings}}
                Read something else
              {{else}}
                {{> create-reading id=writing.id}}
              {{/ifeqs}}
          {{/each}}
        </p>
        </p>
        <p>
        {{#if writing.editable}}
          {{> remove-writing id=writing.id}}
        {{/if}}
      </p>
        <p>
        {{#if writing.editable}}
          {{> update-writing id=writing.id}}
        {{/if}}
      </p>

    </section>

    {{/each}}
{{else}}
  <h3>Nothing to see here</h3>
  {{/unless}}
